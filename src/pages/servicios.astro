---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Service {
  title: string;
  slug: string;
  icon: string;
  color: string;
  desc: string;
  bullets: string[];
  id: string;
}

const services: Service[] = [
  {
    id: "gestion-del-cambio",
    title: "Gestión del Cambio",
    slug: "gestion-del-cambio",
    icon: "fa-solid fa-refresh",
    color: "text-blue-500",
    desc:
      "Especializados en gestión del cambio, facilitamos la implementación efectiva de transformaciones organizacionales y operativas en entornos mineros, utilizando enfoques sociológicos y educacionales para minimizar resistencias y maximizar la adopción de nuevas prácticas.",
    bullets: [
      "Análisis de impacto organizacional",
      "Planes de comunicación y capacitación",
      "Monitoreo de adopción y ajustes",
    ],
  },
  {
    id: "optimizacion-de-procesos",
    title: "Optimización de Procesos",
    slug: "optimizacion-de-procesos",
    icon: "fa-solid fa-cogs",
    color: "text-blue-500",
    desc:
      "Aplicamos metodologías Lean Six Sigma para identificar y eliminar desperdicios, reducir variabilidad y optimizar procesos operativos en la minería, logrando mejoras significativas en eficiencia y calidad.",
    bullets: [
      "Análisis DMAIC y mapeo de procesos",
      "Eliminación de desperdicios y reducción de variabilidad",
      "Control estadístico y mejora continua",
    ],
  },
  {
    id: "optimizacion-de-tiempos-y-recursos",
    title: "Optimización de Tiempos y Recursos",
    slug: "optimizacion-de-tiempos-y-recursos",
    icon: "fa-solid fa-clock",
    color: "text-blue-500",
    desc:
      "Desarrollamos estrategias para optimizar el uso de tiempos y recursos en operaciones mineras, implementando técnicas de planificación avanzada, gestión de inventarios y asignación óptima de personal y equipos.",
    bullets: [
      "Planificación avanzada y gestión de inventarios",
      "Asignación óptima de recursos humanos y equipos",
      "Monitoreo en tiempo real y ajustes dinámicos",
    ],
  },
];
---

<MainLayout id="servicios" class="min-h-screen bg-white text-slate-900">
  <!-- Hero -->
   <Navbar/>
  <!-- HERO -->
  <section class="relative">
    <div class="mx-auto max-w-7xl px-6 lg:px-12 py-16 lg:py-24">
      <span class="inline-flex items-center gap-2 text-sm font-medium px-4 py-2 rounded-full border border-blue-200 bg-blue-50 text-blue-700">
        <i class="fa-solid fa-screwdriver-wrench"></i>
        Servicios
      </span>

      <h1 class="mt-6 text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight">
        Soluciones para una
        <span class="text-blue-600">Minería de Alto Desempeño</span>
      </h1>

      <p class="mt-4 text-lg text-slate-600 max-w-3xl">
        Aceleramos tu operación con tecnología de vanguardia: automatización, seguridad basada en IA y analítica lista para decisiones.
      </p>

      <div class="mt-8 flex flex-wrap gap-4">
        <a href="#lista-servicios" class="rounded-lg px-5 py-3 font-semibold bg-blue-600 text-white hover:bg-blue-700 transition">
          Ver servicios
        </a>
        <a href="/#contacto" class="rounded-lg px-5 py-3 font-semibold border border-blue-200 text-blue-700 hover:bg-blue-50 transition">
          Hablar con un experto
        </a>
      </div>
    </div>
  </section>

  <!-- CARDS -->
  <section id="lista-servicios" class="mx-auto max-w-7xl px-6 lg:px-12 pb-16 lg:pb-24">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {services.map((s) => (
        <article id={s.id} class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 lg:p-7 shadow-sm hover:shadow-lg hover:border-blue-200 transition">
          <div class="flex items-center gap-3">
            <span class="inline-flex h-10 w-10 items-center justify-center rounded-xl bg-blue-50 text-blue-600">
              <i class={s.icon}></i>
            </span>
            <h3 class="text-xl font-bold">{s.title}</h3>
          </div>

          <p class="mt-4 text-slate-600">{s.desc}</p>

          <ul class="mt-5 space-y-2.5">
            {s.bullets.map((b) => (
              <li class="flex items-start gap-2.5">
                <i class="fa-solid fa-circle-check mt-0.5 text-blue-600"></i>
                <span class="text-slate-700">{b}</span>
              </li>
            ))}
          </ul>

          <div class="mt-6 flex items-center gap-3">
            <a href={`/servicios/${s.slug}`} class="rounded-lg px-4 py-2.5 font-semibold border border-blue-200 text-blue-700 hover:bg-blue-50 transition">
              Ver detalle
            </a>
            <a href="/#contacto" class="rounded-lg px-4 py-2.5 font-semibold bg-blue-600 text-white hover:bg-blue-700 transition">
              Solicitar consultoría
            </a>
          </div>

          <!-- Sutileza: borde/halo azul en hover -->
          <div class="pointer-events-none absolute inset-0 rounded-2xl ring-0 ring-blue-200/0 group-hover:ring-8 group-hover:ring-blue-50 transition"></div>
        </article>
      ))}
    </div>
  </section>

  <!-- CÓMO TRABAJAMOS -->
  <section class="mx-auto max-w-7xl px-6 lg:px-12 pb-20">
    <div class="grid gap-10 lg:grid-cols-3">
      <div class="lg:col-span-1">
        <h2 class="text-3xl font-extrabold">Cómo trabajamos</h2>
        <p class="mt-3 text-slate-600">Implementaciones ágiles con foco en ROI y adopción en terreno.</p>
      </div>
      <div class="lg:col-span-2 grid sm:grid-cols-2 gap-6">
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-magnifying-glass-chart text-blue-600"></i>
            <h3 class="font-bold">1. Diagnóstico</h3>
          </div>
          <p class="mt-2 text-slate-600">Levantamiento de procesos, KPIs y datos disponibles.</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-diagram-project text-blue-600"></i>
            <h3 class="font-bold">2. Piloto y ROI</h3>
          </div>
          <p class="mt-2 text-slate-600">Proyectos piloto medibles en semanas con metas de impacto claras.</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-gears text-blue-600"></i>
            <h3 class="font-bold">3. Integración</h3>
          </div>
          <p class="mt-2 text-slate-600">Conexión con ERP/SCADA, seguridad y gobernanza de datos.</p>
        </div>
        <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-rocket text-blue-600"></i>
            <h3 class="font-bold">4. Escalamiento</h3>
          </div>
          <p class="mt-2 text-slate-600">Capacitación, monitoreo continuo y roadmap de mejoras.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA FINAL -->
  <section class="relative border-t border-slate-200 bg-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-12 py-14 lg:py-16">
      <div class="flex flex-col lg:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-2xl lg:text-3xl font-extrabold">¿Listo para comenzar?</h3>
          <p class="text-slate-600 mt-2">Agenda una llamada y te mostramos un caso similar al tuyo.</p>
        </div>
        <div class="flex gap-3">
          <a href="/#contacto" class="rounded-lg px-5 py-3 font-semibold bg-blue-600 text-white hover:bg-blue-700 transition">
            Solicitar consultoría
          </a>
          <a href="/" class="rounded-lg px-5 py-3 font-semibold border border-blue-200 text-blue-700 hover:bg-blue-50 transition">
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </section>
    <div class="mx-auto max-w-7xl px-6 lg:px-12 py-14 lg:py-16">
      <div class="flex flex-col lg:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-2xl lg:text-3xl font-extrabold">¿Listo para comenzar?</h3>
          <p class="text-white/80 mt-2">Agenda una llamada y te mostramos un caso similar al tuyo.</p>
        </div>
        <div class="flex gap-3">
          <a href="#contacto" class="rounded-lg px-5 py-3 font-semibold bg-gradient-to-r from-orange-500 to-emerald-500 hover:from-orange-600 hover:to-emerald-600 transition">
            Solicitar consultoría
          </a>
          <a href="/" class="rounded-lg px-5 py-3 font-semibold border border-white/20 hover:bg-white/10 transition">
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </section>
  <Footer/>
</MainLayout/>

<!-- Pequeño script para el glow en hover de las cards -->
<script>
  document.addEventListener("mousemove", (e) => {
    document.querySelectorAll("article.group").forEach((card) => {
      const rect = card.getBoundingClientRect();
      const x = ((e.clientX - rect.left) / rect.width) * 100;
      const y = ((e.clientY - rect.top) / rect.height) * 100;
      (card as HTMLElement).style.setProperty("--x", x + "%");
      (card as HTMLElement).style.setProperty("--y", y + "%");
    });
  });
</script>

