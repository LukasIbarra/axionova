---
interface FormField {
  name: string;
  placeholder: string;
  type: string;
}

interface Stat {
  icon: string;
  value: string;
  label: string;
  color: string;
}

interface Slide {
  id: number;
  type: "impact" | "form" | "stats";
  title: string;
  subtitle: string;
  description: string;
  image: string;
  highlights?: string[];
  formFields?: FormField[];
  stats?: Stat[];
}

const heroSlides: Slide[] = [
  {
    id: 1,
    type: "impact",
    title: "El Futuro de la",
    subtitle: "Minería es Hoy",
    description: "Revolucionamos la industria con tecnología de vanguardia que maximiza la eficiencia, garantiza la seguridad y protege el medio ambiente.",
    image: "/servi4.jpg",
    highlights: [
      "Tecnología IA Avanzada",
      "Seguridad Certificada ISO",
      "Sostenibilidad Garantizada"
    ]
  },
  {
    id: 2,
    type: "form",
    title: "¿Listo para",
    subtitle: "Transformar tu Operación?",
    description: "Obtén una consultoría gratuita y descubre cómo nuestras soluciones pueden revolucionar tu empresa minera.",
    image: "/conte6.jpg",
    formFields: [
      { name: "empresa", placeholder: "Nombre de tu empresa", type: "text" },
      { name: "email", placeholder: "Email corporativo", type: "email" },
      { name: "telefono", placeholder: "Teléfono", type: "tel" }
    ]
  },
  {
    id: 3,
    type: "stats",
    title: "Resultados que",
    subtitle: "Hablan por Sí Solos",
    description: "Más de 15 años liderando la transformación digital de la minería con resultados comprobados y reconocimiento mundial.",
    image: "/conte4.jpg",
    stats: [
      { icon: "trending-up", value: "300%", label: "Aumento Eficiencia", color: "from-orange-500 to-orange-600" },
      { icon: "shield", value: "99.9%", label: "Índice Seguridad", color: "from-emerald-500 to-emerald-600" },
      { icon: "users", value: "50+", label: "Proyectos Exitosos", color: "from-blue-500 to-blue-600" },
      { icon: "globe", value: "12", label: "Países Activos", color: "from-purple-500 to-purple-600" }
    ]
  }
];
---

<section id="inicio" class="relative min-h-screen overflow-hidden bg-black">
  <!-- Background Images -->
  {heroSlides.map((slide, index) => (
    <div
      class={`slide-background absolute inset-0 transition-all duration-1500 ease-in-out ${
        index === 0 ? 'opacity-100 scale-100' : 'opacity-0 scale-105'
      }`}
      style={`background-image: url('${slide.image}'); background-size: cover; background-position: center;`}
      data-slide={index}
    >
      <div class="absolute inset-0 bg-black/70"></div>
    </div>
  ))}

  <!-- Animated Particles -->
  <div class="particles absolute inset-0 overflow-hidden pointer-events-none">
    {Array.from({ length: 20 }, (_, i) => (
      <div
        class={`particle absolute w-1 h-1 bg-emerald-400 rounded-full opacity-30 animate-float-${i % 3}`}
        style={`left: ${5 + (i * 4.5) % 90}%; top: ${10 + (i * 3.5) % 80}%; animation-delay: ${i * 0.3}s;`}
      ></div>
    ))}
  </div>

  <!-- Content -->
  <div class="relative z-20 h-full flex items-center justify-center">
    <div class="container mx-auto px-6 py-20 flex flex-col justify-start h-full">
      
      <!-- Impact Slide (Slide 1) -->
      <div class={`slide-content impact-slide w-full max-w-6xl mx-auto flex flex-col items-start text-left transition-all duration-800 ${
        heroSlides[0].type === 'impact' ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-8 pointer-events-none'
