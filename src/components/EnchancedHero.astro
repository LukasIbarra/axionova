<script define:vars={{ heroSlides }}>
  // Variables globales
  let currentSlideIndex = 0;
  let isAutoPlaying = true;
  let autoPlayInterval = null;
  let progressBar = null;

  function updateSlide() {
    // Actualizar backgrounds
    const backgrounds = document.querySelectorAll('.slide-background');
    backgrounds.forEach((bg, index) => {
      if (bg instanceof HTMLElement) {
        bg.style.opacity = index === currentSlideIndex ? '1' : '0';
        bg.style.transform = index === currentSlideIndex ? 'scale(1)' : 'scale(1.05)';
      }
    });

    // Actualizar contenido con mejor manejo de animaciones
    const contents = document.querySelectorAll('.slide-content');
    contents.forEach((content, index) => {
      if (content instanceof HTMLElement) {
        const slideType = heroSlides[index].type;
        const targetContent = document.querySelector(`.${slideType}-slide`);
        if (targetContent instanceof HTMLElement) {
          if (index === currentSlideIndex) {
            // Activar slide actual
            targetContent.style.opacity = '1';
            targetContent.style.transform = 'translateY(0)';
            // Forzar reflow para reiniciar animaciones
            targetContent.offsetHeight;
            // Agregar clases de animación
            targetContent.classList.add('active-slide');
          } else {
            // Desactivar slide
            targetContent.style.opacity = '0';
            targetContent.style.transform = 'translateY(20px)';
            targetContent.classList.remove('active-slide');
          }
        }
      }
    });

    // Actualizar indicadores
    const indicators = document.querySelectorAll('.indicator');
    indicators.forEach((indicator, index) => {
      if (indicator instanceof HTMLElement) {
        indicator.classList.toggle('bg-emerald-400', index === currentSlideIndex);
        indicator.classList.toggle('scale-125', index === currentSlideIndex);
        indicator.classList.toggle('bg-white/30', index !== currentSlideIndex);
      }
    });

    // Reiniciar barra de progreso
    if (progressBar) {
      progressBar.style.width = '0%';
      if (isAutoPlaying) {
        setTimeout(() => {
          if (progressBar) progressBar.style.width = '100%';
        }, 50);
      }
    }
  }

  function nextSlide() {
    currentSlideIndex = (currentSlideIndex + 1) % heroSlides.length;
    updateSlide();
    isAutoPlaying = false;
  }

  function prevSlide() {
    currentSlideIndex = (currentSlideIndex - 1 + heroSlides.length) % heroSlides.length;
    updateSlide();
    isAutoPlaying = false;
  }

  function goToSlide(index) {
    currentSlideIndex = index;
    updateSlide();
    isAutoPlaying = false;
  }

  function startAutoPlay() {
    if (autoPlayInterval) clearInterval(autoPlayInterval);
    autoPlayInterval = setInterval(() => {
      if (isAutoPlaying) {
        nextSlide();
      }
    }, 8000);
  }

  function stopAutoPlay() {
    isAutoPlaying = false;
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
      autoPlayInterval = null;
    }
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    progressBar = document.getElementById('progress-bar');

    // Botones de navegación
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');

    if (prevBtn) {
      prevBtn.addEventListener('click', prevSlide);
    }
    if (nextBtn) {
      nextBtn.addEventListener('click', nextSlide);
    }

    // Indicadores
    const indicators = document.querySelectorAll('.indicator');
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => goToSlide(index));
    });

    // Formulario
    const form = document.getElementById('consultation-form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        console.log('Form submitted:', Object.fromEntries(formData));
