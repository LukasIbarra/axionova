<script>
  // Interactive services functionality
  document.addEventListener('DOMContentLoaded', () => {
    const serviceItems = document.querySelectorAll('.service-item');
    const serviceDetails = document.querySelectorAll('.service-detail');
    let activeServiceId = 1;

    function updateActiveService(serviceId: number) {
      // Remove active class from all items
      serviceItems.forEach(item => {
        const glowEffect = item.querySelector('.glow-effect') as HTMLElement;
        const serviceIcon = item.querySelector('.service-icon') as HTMLElement;
        const serviceTitle = item.querySelector('.service-title') as HTMLElement;
        const serviceDesc = item.querySelector('.service-desc') as HTMLElement;
        const serviceChevron = item.querySelector('.service-chevron') as HTMLElement;

        item.classList.remove('active');
        if (glowEffect) glowEffect.style.opacity = '0';
        if (serviceIcon) {
          serviceIcon.classList.remove('text-orange-400', 'text-emerald-400', 'text-blue-400', 'text-green-400', 'text-purple-400', 'text-gray-400');
          serviceIcon.classList.add('text-gray-400');
        }
        if (serviceTitle) {
          serviceTitle.classList.remove('text-white');
          serviceTitle.classList.add('text-gray-300');
        }
        if (serviceDesc) {
          serviceDesc.classList.remove('text-gray-300');
          serviceDesc.classList.add('text-gray-500');
        }
        if (serviceChevron) {
          serviceChevron.classList.remove('text-emerald-400', 'rotate-90');
          serviceChevron.classList.add('text-gray-600');
        }
        item.classList.remove('bg-gradient-to-r', 'from-orange-500/20', 'to-red-500/20', 'from-emerald-500/20', 'to-green-500/20', 'from-blue-500/20', 'to-purple-500/20', 'from-purple-500/20', 'to-pink-500/20', 'from-gray-500/20', 'to-slate-500/20');
        item.classList.add('bg-black/30');
        item.classList.remove('border-orange-500/30', 'border-emerald-500/30', 'border-blue-500/30', 'border-green-500/30', 'border-purple-500/30', 'border-gray-500/30');
        item.classList.add('border-gray-800');
      });

      // Add active class to selected item
      const activeItem = document.querySelector(`[data-service-id="${serviceId}"]`) as HTMLElement;
      if (activeItem) {
        const glowEffect = activeItem.querySelector('.glow-effect') as HTMLElement;
        const serviceIcon = activeItem.querySelector('.service-icon') as HTMLElement;
        const serviceTitle = activeItem.querySelector('.service-title') as HTMLElement;
        const serviceDesc = activeItem.querySelector('.service-desc') as HTMLElement;
        const serviceChevron = activeItem.querySelector('.service-chevron') as HTMLElement;

        activeItem.classList.add('active');
        if (glowEffect) glowEffect.style.opacity = '1';
        if (serviceIcon) {
          serviceIcon.classList.remove('text-gray-400');
          serviceIcon.classList.add('text-orange-400');
        }
        if (serviceTitle) {
          serviceTitle.classList.remove('text-gray-300');
          serviceTitle.classList.add('text-white');
        }
        if (serviceDesc) {
          serviceDesc.classList.remove('text-gray-500');
          serviceDesc.classList.add('text-gray-300');
        }
        if (serviceChevron) {
          serviceChevron.classList.remove('text-gray-600');
          serviceChevron.classList.add('text-emerald-400', 'rotate-90');
        }
        activeItem.classList.remove('bg-black/30');
        activeItem.classList.add('bg-gradient-to-r', 'from-orange-500/20', 'to-red-500/20');
        activeItem.classList.remove('border-gray-800');
        activeItem.classList.add('border-orange-500/30');
      }

      // Update service details
      serviceDetails.forEach(detail => {
        const detailElement = detail as HTMLElement;
        detail.classList.remove('active');
        detailElement.style.opacity = '0';
        detailElement.style.transform = 'translateY(20px) scale(0.95)';
      });

      const activeDetail = document.querySelector(`.service-detail[data-service-id="${serviceId}"]`) as HTMLElement;
      if (activeDetail) {
        setTimeout(() => {
          activeDetail.classList.add('active');
          activeDetail.style.opacity = '1';
          activeDetail.style.transform = 'translateY(0) scale(1)';
        }, 150);
      }

      activeServiceId = serviceId;
    }

    // Add click event listeners
    serviceItems.forEach(item => {
      item.addEventListener('click', () => {
        const serviceIdAttr = item.getAttribute('data-service-id');
        if (serviceIdAttr) {
          const serviceId = parseInt(serviceIdAttr);
          updateActiveService(serviceId);
        }
      });

      // Add hover effects
      item.addEventListener('mouseenter', () => {
        if (!item.classList.contains('active')) {
          const serviceIcon = item.querySelector('.service-icon') as HTMLElement;
          const serviceChevron = item.querySelector('.service-chevron') as HTMLElement;
          if (serviceIcon) {
            serviceIcon.classList.remove('text-gray-400');
            serviceIcon.classList.add('text-orange-400');
          }
          if (serviceChevron) {
            serviceChevron.classList.remove('text-gray-600');
            serviceChevron.classList.add('text-gray-400');
          }
        }
      });

      item.addEventListener('mouseleave', () => {
        if (!item.classList.contains('active')) {
          const serviceIcon = item.querySelector('.service-icon') as HTMLElement;
          const serviceChevron = item.querySelector('.service-chevron') as HTMLElement;
          if (serviceIcon) {
            serviceIcon.classList.remove('text-orange-400');
            serviceIcon.classList.add('text-gray-400');
          }
          if (serviceChevron) {
            serviceChevron.classList.remove('text-gray-400');
            serviceChevron.classList.add('text-gray-600');
          }
        }
      });
    });

    // Initialize first service as active
    updateActiveService(1);
  });
</script>

