<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mql = window.matchMedia('(min-width: 1024px)');
    let teardown = () => {};

    // WeakMap para guardar handlers sin colgar props en los nodos
    const handlerMap = new WeakMap();

    function applyDesktop() {
      const serviceItems = document.querySelectorAll('.service-item');
      const serviceDetails = document.querySelectorAll('.service-detail');
      let activeServiceId = 1;

      function updateActiveService(serviceId: number): void {
        // Reset de la lista
        serviceItems.forEach((item) => {
          if (!(item instanceof HTMLElement)) return;

          const glow  = item.querySelector('.glow-effect');
          const icon  = item.querySelector('.service-icon');
          const title = item.querySelector('.service-title');
          const desc  = item.querySelector('.service-desc');
          const chev  = item.querySelector('.service-chevron');

          item.classList.remove('active');

          if (glow instanceof HTMLElement) glow.style.opacity = '0';

          if (icon instanceof HTMLElement) {
            icon.classList.remove('text-blue-400');
            icon.classList.add('text-gray-400');
          }
          if (title instanceof HTMLElement) {
            title.classList.remove('text-gray-900');
            title.classList.add('text-gray-800');
          }
          if (desc instanceof HTMLElement) {
            desc.classList.remove('text-gray-700');
            desc.classList.add('text-gray-600');
          }
          if (chev instanceof HTMLElement) {
            chev.classList.remove('text-blue-400', 'rotate-90');
            chev.classList.add('text-gray-500');
          }

          item.classList.remove(
            'bg-gradient-to-r',
            'from-blue-500/20',
            'to-blue-600/20',
            'border-blue-500/30'
          );
          item.classList.add('bg-white', 'border-gray-200');
        });

        // Activar el item seleccionado
        const activeItem = document.querySelector('[data-service-id="' + serviceId + '"]');
        if (activeItem instanceof HTMLElement) {
          const glow  = activeItem.querySelector('.glow-effect');
          const icon  = activeItem.querySelector('.service-icon');
          const title = activeItem.querySelector('.service-title');
          const desc  = activeItem.querySelector('.service-desc');
          const chev  = activeItem.querySelector('.service-chevron');

          activeItem.classList.add('active');

          if (glow instanceof HTMLElement) glow.style.opacity = '1';

          if (icon instanceof HTMLElement) {
            icon.classList.remove('text-gray-400');
            icon.classList.add('text-blue-400');
          }
          if (title instanceof HTMLElement) {
            title.classList.remove('text-gray-800');
            title.classList.add('text-gray-900');
          }
          if (desc instanceof HTMLElement) {
            desc.classList.remove('text-gray-600');
            desc.classList.add('text-gray-700');
          }
          if (chev instanceof HTMLElement) {
            chev.classList.remove('text-gray-500');
            chev.classList.add('text-blue-400', 'rotate-90');
          }

          activeItem.classList.remove('bg-white', 'border-gray-200');
          activeItem.classList.add(
            'bg-gradient-to-r',
            'from-blue-500/20',
            'to-blue-600/20',
            'border-blue-500/30'
          );
        }

        // Paneles de detalle
        serviceDetails.forEach((detail) => {
          if (!(detail instanceof HTMLElement)) return;
          detail.classList.remove('active');
          detail.style.opacity = '0';
          detail.style.transform = 'translateY(20px) scale(0.95)';
        });

        const activeDetail = document.querySelector('.service-detail[data-service-id="' + serviceId + '"]');
        if (activeDetail instanceof HTMLElement) {
          setTimeout(() => {
            activeDetail.classList.add('active');
            activeDetail.style.opacity = '1';
            activeDetail.style.transform = 'translateY(0) scale(1)';
          }, 150);
        }

        activeServiceId = serviceId;
      }

      // Listeners
      serviceItems.forEach((item) => {
        if (!(item instanceof HTMLElement)) return;

        const idAttr = item.getAttribute('data-service-id');
        const id = idAttr ? parseInt(idAttr, 10) : 1;

        const click = () => updateActiveService(id);
        const enter = () => {
          if (!item.classList.contains('active')) {
            const icon = item.querySelector('.service-icon');
            const chev = item.querySelector('.service-chevron');
            if (icon instanceof HTMLElement) {
              icon.classList.remove('text-gray-400');
              icon.classList.add('text-blue-400');
            }
            if (chev instanceof HTMLElement) {
              chev.classList.remove('text-gray-500');
              chev.classList.add('text-gray-700');
            }
          }
        };
        const leave = () => {
          if (!item.classList.contains('active')) {
            const icon = item.querySelector('.service-icon');
            const chev = item.querySelector('.service-chevron');
            if (icon instanceof HTMLElement) {
              icon.classList.remove('text-blue-400');
              icon.classList.add('text-gray-400');
            }
            if (chev instanceof HTMLElement) {
              chev.classList.remove('text-gray-700');
              chev.classList.add('text-gray-500');
            }
          }
        };

        item.addEventListener('click', click);
        item.addEventListener('mouseenter', enter);
        item.addEventListener('mouseleave', leave);

        handlerMap.set(item, { click, enter, leave });
      });

      // Activa por defecto el primero
      updateActiveService(1);

      // Limpieza
      teardown = () => {
        serviceItems.forEach((item) => {
          if (!(item instanceof HTMLElement)) return;
          const h = handlerMap.get(item);
          if (h && h.click) item.removeEventListener('click', h.click);
          if (h && h.enter) item.removeEventListener('mouseenter', h.enter);
          if (h && h.leave) item.removeEventListener('mouseleave', h.leave);
          handlerMap.delete(item);
        });
      };
    }

    function handleMQ(ev: MediaQueryListEvent | MediaQueryList): void {
      teardown();
      const matches = 'matches' in ev ? ev.matches : (ev as MediaQueryList).matches;
      if (matches) applyDesktop();
      else teardown = () => {};
    }

    // Suscripción
    if (typeof mql.addEventListener === 'function') {
      mql.addEventListener('change', (ev: MediaQueryListEvent) => handleMQ(ev));
    } else if (typeof mql.addListener === 'function') {
      mql.addListener(handleMQ);
    }
    handleMQ(mql);
  });
</script>


<style>
