<script>
  // Elements
  const navbar = document.getElementById('main-navbar');
  const navbarContainer = document.getElementById('navbar-container');
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const menuIcon = document.getElementById('menu-icon');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  const mobileBackdrop = document.getElementById('mobile-backdrop');
  const mobileMenuContent = document.getElementById('mobile-menu-content');
  const mobileServicesBtn = document.getElementById('mobile-services-btn');
  const mobileServicesChevron = document.getElementById('mobile-services-chevron');
  const mobileServicesDropdown = document.getElementById('mobile-services-dropdown');

  let isMobileMenuOpen = false;
  let isMobileServicesOpen = false;

  // Scroll effect - Simplificado para el nuevo dise침o
  function handleScroll() {
    const scrolled = window.scrollY > 50;

    if (navbar && navbarContainer) {
      if (scrolled) {
        navbar.classList.add('top-0');
        navbar.classList.remove('top-1');
      } else {
        navbar.classList.remove('top-0');
        navbar.classList.add('top-1');
      }
    }
  }

  // Mobile menu toggle
  function toggleMobileMenu() {
    isMobileMenuOpen = !isMobileMenuOpen;

    if (mobileMenuOverlay && mobileMenuContent && menuIcon) {
      if (isMobileMenuOpen) {
        mobileMenuOverlay.classList.remove('opacity-0', 'invisible');
        mobileMenuOverlay.classList.add('opacity-100', 'visible');
        mobileMenuContent.classList.remove('translate-y-4', 'scale-95');
        mobileMenuContent.classList.add('translate-y-0', 'scale-100');
        menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
      } else {
        mobileMenuOverlay.classList.remove('opacity-100', 'visible');
        mobileMenuOverlay.classList.add('opacity-0', 'invisible');
        mobileMenuContent.classList.remove('translate-y-0', 'scale-100');
        mobileMenuContent.classList.add('translate-y-4', 'scale-95');
        menuIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>';
      }
    }
  }

  // Mobile services dropdown toggle
  function toggleMobileServices() {
    isMobileServicesOpen = !isMobileServicesOpen;

    if (mobileServicesDropdown && mobileServicesChevron) {
      if (isMobileServicesOpen) {
        mobileServicesDropdown.classList.remove('hidden');
        mobileServicesChevron.classList.add('rotate-180');
      } else {
        mobileServicesDropdown.classList.add('hidden');
        mobileServicesChevron.classList.remove('rotate-180');
      }
    }
  }

  // Event listeners
  window.addEventListener('scroll', handleScroll);
  mobileMenuBtn?.addEventListener('click', toggleMobileMenu);
  mobileBackdrop?.addEventListener('click', toggleMobileMenu);
  if (mobileServicesBtn) {
    mobileServicesBtn.addEventListener('click', toggleMobileServices);
  }

  // Close mobile menu on link click
  const mobileLinks = mobileMenuContent?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      if (isMobileMenuOpen) {
        toggleMobileMenu();
      }
    });
  });
</script>

