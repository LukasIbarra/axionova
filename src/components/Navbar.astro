<script>
  // Elements
  const navbar = document.getElementById('main-navbar');
  const navbarContainer = document.getElementById('navbar-container');

  // Scroll effect - Professional glassmorphism
  function handleScroll() {
    const scrolled = window.scrollY > 50;

    if (navbar && navbarContainer) {
      if (scrolled) {
        navbarContainer.classList.add('bg-white/60', 'backdrop-blur-xl', 'shadow-xl', 'border-gray-300/20');
        navbarContainer.classList.remove('bg-white/90', 'backdrop-blur-md', 'shadow-md', 'border-gray-200/50');
      } else {
        navbarContainer.classList.remove('bg-white/60', 'backdrop-blur-xl', 'shadow-xl', 'border-gray-300/20');
        navbarContainer.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow-md', 'border-gray-200/50');
      }
    }
  }

  // Event listeners
  window.addEventListener('scroll', handleScroll);
</script>
