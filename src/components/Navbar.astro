<script is:inline>
  (function () {
    // Evita registrar handlers dos veces en navegaciones SPA
    if (window.__ax_nav_bound) return;
    window.__ax_nav_bound = true;

    function $(sel) {
      return document.querySelector(sel);
    }

    function getEls() {
      return {
        navbarContainer: /** @type {HTMLDivElement|null} */ (
          $("#navbar-container")
        ),
        mobileMenu: /** @type {HTMLDivElement|null} */ ($("#mobile-menu")),
        menuIcon: /** @type {SVGSVGElement|null} */ ($("#menu-icon")),
        closeIcon: /** @type {SVGSVGElement|null} */ ($("#close-icon")),
      };
    }

    function handleScroll() {
      var els = getEls();
      var box = els.navbarContainer;
      if (!box) return;
      var scrolled = window.scrollY > 50;

      box.classList.toggle("bg-white/60", scrolled);
      box.classList.toggle("backdrop-blur-xl", scrolled);
      box.classList.toggle("shadow-xl", scrolled);
      box.classList.toggle("border-gray-300/20", scrolled);

      box.classList.toggle("bg-white/90", !scrolled);
      box.classList.toggle("backdrop-blur-md", !scrolled);
      box.classList.toggle("shadow-md", !scrolled);
      box.classList.toggle("border-gray-200/50", !scrolled);
    }

    function openMenu() {
      var els = getEls();
      if (!els.mobileMenu || !els.menuIcon || !els.closeIcon) return;
      els.mobileMenu.classList.remove("hidden");
      els.menuIcon.classList.add("hidden");
      els.closeIcon.classList.remove("hidden");
      document.addEventListener("keydown", onKeyDown);
    }

    function closeMenu() {
      var els = getEls();
      if (!els.mobileMenu || !els.menuIcon || !els.closeIcon) return;
      els.mobileMenu.classList.add("hidden");
      els.menuIcon.classList.remove("hidden");
      els.closeIcon.classList.add("hidden");
      document.removeEventListener("keydown", onKeyDown);
    }

    function onKeyDown(e) {
      if (e.key === "Escape") closeMenu();
    }

    // Delegación de eventos: funciona tras ClientRouter/ViewTransitions
    document.addEventListener("click", function (e) {
      var t = /** @type {Element|null} */ (e.target);
      // Toggle del botón móvil
      if (t && t.closest("#mobile-menu-btn")) {
        e.stopPropagation();
        var els = getEls();
        var isOpen = !!(
          els.mobileMenu && !els.mobileMenu.classList.contains("hidden")
        );
        if (isOpen) closeMenu();
        else openMenu();
        return;
      }
      // Cerrar si clic fuera del panel cuando está abierto
      if (t && !t.closest("#mobile-menu")) closeMenu();
    });

    // Cerrar al elegir cualquier enlace dentro del panel móvil
    document.addEventListener("click", function (e) {
      var t = /** @type {Element|null} */ (e.target);
      if (t && t.closest("#mobile-menu a")) closeMenu();
    });

    // Estado inicial de scroll
    window.addEventListener("scroll", handleScroll);
    handleScroll();

    // Re-sincroniza tras cada navegación SPA de Astro
    window.addEventListener("astro:page-load", function () {
      handleScroll();
      closeMenu(); // asegura cerrado al llegar
    });
  })();
</script>
