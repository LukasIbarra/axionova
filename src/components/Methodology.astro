---
const methodologySteps = [
  { id: 1, title: "Definir", description: "Aclarar el problema", icon: "bullseye" },
  { id: 2, title: "Medir", description: "Cuantificar el problema", icon: "ruler-combined" },
  { id: 3, title: "Analizar", description: "Identificar las causas", icon: "search" },
  { id: 4, title: "Mejorar", description: "Resolver las causas y confirmar la mejora", icon: "cogs" },
  { id: 5, title: "Controlar", description: "Mantener las mejoras y supervisar los resultados", icon: "chart-line" }
];

const whatWeDo = [
  { id: 1, title: "Alcanza tus objetivos", description: "Maximiza el valor de tu empresa con soluciones a medida." },
  { id: 2, title: "Mide tus procesos", description: "Analiza y optimiza cada etapa para mayor eficiencia." },
  { id: 3, title: "Servicios personalizados", description: "Adaptamos nuestras soluciones a tus necesidades específicas." }
];
---


<section id="metodologia" class="relative py-24 bg-white text-gray-900 overflow-hidden">
  <!-- Upper SVG Separator -->
  <div class="absolute top-0 left-0 w-full overflow-hidden">
    <svg class="relative block w-full h-16" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <defs>
        <linearGradient id="upperBlueGrad" x1="0" y1="0" x2="0" y2="1">
          <stop offset="0%" stop-color="#1e40af" />
          <stop offset="100%" stop-color="#1e3a8a" />
        </linearGradient>
        <linearGradient id="upperOrangeGrad" x1="0" y1="0" x2="0" y2="1">
          <stop offset="0%" stop-color="#f97316" />
          <stop offset="100%" stop-color="#ea580c" />
        </linearGradient>
      </defs>
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="url(#upperOrangeGrad)"></path>
